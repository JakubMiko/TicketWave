<header>
  <nav class="navbar" role="navigation" aria-label="main navigation" data-controller="navbar">
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        <span class="has-text-weight-bold is-size-4">
          <span class="has-text-primary">Ticket</span><span class="has-text-gray">Wave</span>
        </span>
      </a>

      <!-- Hamburger menu -->
      <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-action="click->navbar#toggle" data-navbar-target="burger">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <!-- Menu -->
    <div id="navbarBasicExample" class="navbar-menu" data-navbar-target="menu">
      <div class="navbar-start is-flex is-justify-content-center" style="flex-grow: 1;">
        <a class="navbar-item" href="/events">
          Wydarzenia
        </a>

        <% if admin_signed_in? %>
          <a class="navbar-item" href="<%= admins_dashboard_path %>">
            Panel Administratora
          </a>
          <a class="navbar-item" href="<%= orders_path %>">
            Moje zamówienia
          </a>
        <% elsif user_signed_in? %>
          <a class="navbar-item" href="<%= users_dashboard_path %>">
            Panel Użytkownika
          </a>
          <a class="navbar-item" href="<%= orders_path %>">
            Moje zamówienia
          </a>
        <% end %>
      </div>

      <div class="navbar-end">
        <div class="navbar-item is-flex is-align-items-center is-justify-content-space-between" style="width: 100%;">
          <!-- Ikona trybu -->
          <button data-controller="theme" data-action="click->theme#toggle" class="button is-light">
            <img src="<%= asset_path('sun_icon.svg') %>" alt="Przełącz tryb" width="24" height="24">
          </button>

          <!-- Powitanie i przycisk wylogowania -->
          <% if admin_signed_in? %>
            <p class="ml-3">
              Serwus, <%= current_admin.first_name %>! <span class="has-text-weight-bold">(A)</span>
            </p>
            <%= button_to "Wyloguj się", destroy_admin_session_path, method: :delete, class: "button is-light ml-3" %>
          <% elsif user_signed_in? %>
            <p class="ml-3">
              Serwus, <%= current_user.first_name %>!
            </p>
            <%= button_to "Wyloguj się", destroy_user_session_path, method: :delete, class: "button is-light ml-3" %>
          <% else %>
            <div class="buttons is-flex is-justify-content-space-between">
              <a class="button is-primary ml-3" href="<%= new_user_registration_path %>">
                <strong>Zarejestruj się</strong>
              </a>
              <a class="button is-light ml-3" href="<%= new_user_session_path %>">
                Zaloguj się
              </a>
              <button class="button is-light is-rounded is-flex is-align-items-center is-justify-content-center ml-3">
                <a href="<%= new_admin_session_path %>" class="is-flex is-align-items-center is-justify-content-center" style="width: 24px; height: 24px;">
                  <img src="<%= asset_path('lifebuoy_icon.svg') %>" alt="Zaloguj się jako administrator" width="24" height="24">
                </a>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>
