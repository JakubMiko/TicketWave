<%# app/views/orders/show.html.erb %>
<div class="container mt-4">
  <h1 class="title is-2">Szczegóły zamówienia #<%= order.id %></h1>

  <div class="box">
    <div class="columns">
      <div class="column">
        <h2 class="title is-4">Informacje o wydarzeniu</h2>
        <p><strong>Nazwa:</strong> <%= order.event.name %></p>
        <p><strong>Data:</strong> <%= order.event.date.strftime("%d.%m.%Y, %H:%M") %></p>
        <p><strong>Miejsce:</strong> <%= order.event.place %></p>
        <p><strong>Kategoria:</strong> <%= order.event.category %></p>
      </div>

      <div class="column">
        <h2 class="title is-4">Informacje o zamówieniu</h2>
        <p><strong>Data zamówienia:</strong> <%= order.created_at.strftime("%d.%m.%Y, %H:%M") %></p>
        <p><strong>Ilość biletów:</strong> <%= order.quantity %></p>
        <p><strong>Cena za bilet:</strong> <%= number_to_currency(order.ticket_batch.price, unit: "zł", format: "%n %u") %></p>
        <p><strong>Łączna kwota:</strong> <%= number_to_currency(order.total_price, unit: "zł", format: "%n %u") %></p>
        <p><strong>Status:</strong> <span class="tag is-success">Zakupione</span></p>
      </div>
    </div>

    <hr>

    <h3 class="title is-5">Twoje bilety</h3>

    <table class="table is-fullwidth">
      <thead>
        <tr>
          <th>Numer biletu</th>
          <th>Cena</th>
        </tr>
      </thead>
      <tbody>
        <% order.tickets.each do |ticket| %>
          <tr>
            <td><%= ticket.ticket_number %></td>
            <td><%= number_to_currency(ticket.price, unit: "zł", format: "%n %u") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="buttons mt-4">
      <%= link_to "Powrót do historii zamówień", orders_path, class: "button is-info" %>
    </div>
  </div>
</div>
