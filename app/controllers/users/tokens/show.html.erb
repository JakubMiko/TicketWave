<!-- app/views/users/tokens/show.html.erb -->
<h2>Twój token API</h2>
<div class="alert alert-info">
  Użyj tego tokenu dla wszystkich zapytań do prywatnego API. Nigdy nie udostępniaj tego tokenu!
</div>

<div class="form-group">
  <label>Twój token API:</label>
  <input type="text" class="form-control" value="<%= current_user.api_token %>" readonly>
</div>

<%= button_to "Wygeneruj nowy token", api_v1_token_path, method: :post, class: "btn btn-warning",
    data: { confirm: "Czy na pewno chcesz wygenerować nowy token? Istniejący token przestanie działać." } %>